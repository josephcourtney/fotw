{
  "manifest_version": 2,
  "name": "User Interaction Tracker",
  "version": "1.0",
  "description": "Tracks all user interaction with web pages and browser navigation.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
