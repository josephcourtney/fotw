{
  "manifest_version": 2,
  "name": "FotW",
  "version": "1.0",
  "description": "This extension tracks navigation and user interactions.",
  "permissions": [
    "webNavigation",
    "activeTab",
    "storage",
    "nativeMessaging",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "FotW"
  },
  "applications": {
    "gecko": {
      "id": "fotw@josephcourtney.com",
      "strict_min_version": "54.0"
    }
  }
}
